@using System.Collections.Generic
@using Microsoft.AspNetCore.Identity;
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using TheGodfatherGM.Web.Models;
@using TheGodfatherGM.Web.Models.GameViewModel;
@model RegisterViewModel
@{
    Layout = "_Login";
    string socialClub = Context.Request.Query["socialclub"].ToString();
    string token = Context.Request.Query["token"].ToString();
}


<div class="section game-panel">
    <main>
        <center>
            <div class="section"></div>
            <div class="container">
                <div class="z-depth-5 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
                    <form asp-controller="Account" asp-action="GameRegister" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="col s12">
                        <img src="~/images/thegodfather-logo.png" style="width:125px" class="circle responsive-img" />
                        <input type="hidden" name="SocialClub" value=@socialClub />
                        <input type="hidden" name="Token" value=@token />

                        <br />
                        <div class="row">
                            <div class="col s12">
                            </div>
                        </div>

                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="row">
                            <div class="input-field col s12">

                                <div>
                                    <label asp-for="EmailAddress" for="email">Enter your email</label>
                                    <input asp-for="EmailAddress" class="validate" type="email" id="email" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <label asp-for="Password" for="password">Enter your password</label>
                                <input asp-for="Password" class="validate" type="password" id="password" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <label asp-for="ConfirmPassword" for="password">Enter your password</label>
                                <input asp-for="ConfirmPassword" class="validate" type="password" id="password" />
                            </div>
                            <label style="float: right;">
                                <a asp-controller="Game" asp-action="ForgotPassword" class="red-text"><b>Forgot Password?</b></a>
                            </label>

                        </div>
                        <br />
                        <center>
                            <div class="row">
                                <button asp-controller="Account" asp-action="GameRegister" type="submit" name="btn_login" class="col s12 btn btn-large waves-effect blue">Register</button>
                            </div>

                            <br />

                            <a asp-controller="Game" asp-action="Login" asp-route-socialclub="@socialClub" asp-route-token="@token">Login to an existing account</a>
                            <br />
                            <br />
                        </center>
                    </form>
                </div>
            </div>

        </center>

        <div class="section"></div>
        <div class="section"></div>
    </main>
</div>